{
  "program": "falcon_leaf.p4",
  "language": "p4-16",
  "targets": {
      "multiswitch": {
      "auto-control-plane": true,
      "bmv2_log": true,
      "pcap_dump": true,
      "cli": false,
      "links": [["h1", "s1"], ["h2", "s1"], ["h3", "s1"]],
      "hosts": {
        "h1": {
            "cmd": "python3 host_send.py",
            "startup_sleep": 0.2,
            "wait": true
        },
        "h2": {
            "cmd": "./host_recv.py h2",
            "startup_sleep": 0.2,
            "wait": false
        },
        "h3": {
            "cmd": "./host_recv.py h3",
            "wait": false
        }
      },
      "switches": {
          "s1": {
              "commands": [
                "commands_falcon_leaf.txt"
              ],
              "mcast_groups": "mcast_groups.txt"
          }
      }
    }
  }
}
